{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "blocks"
    },
    "eventUuid": {
      "type": "uid",
      "targetField": ""
    },
    "date": {
      "type": "datetime"
    },
    "location": {
      "type": "string"
    },
    "instructions": {
      "type": "richtext"
    },
    "rules": {
      "type": "richtext"
    },
    "poster": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "note": {
      "type": "richtext"
    },
    "announcements": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::announcement.announcement",
      "mappedBy": "event"
    },
    "maxRegistrationsAllowed": {
      "type": "integer",
      "private": true,
      "default": 1500
    },
    "participants": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::participant.participant",
      "mappedBy": "event"
    },
    "customRegistrationLink": {
      "type": "string"
    }
  }
}
